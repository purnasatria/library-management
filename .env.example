# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password

# Database URLs
AUTH_DATABASE_URL=postgres://postgres:your_secure_password@postgres:5432/library_auth?sslmode=disable
AUTHOR_DATABASE_URL=postgres://postgres:your_secure_password@postgres:5432/library_author?sslmode=disable
CATEGORY_DATABASE_URL=postgres://postgres:your_secure_password@postgres:5432/library_category?sslmode=disable
BOOK_DATABASE_URL=postgres://postgres:your_secure_password@postgres:5432/library_book?sslmode=disable

# Service Ports
AUTH_GRPC_PORT=:50051
AUTH_REST_PORT=:8081
AUTHOR_GRPC_PORT=:50052
AUTHOR_REST_PORT=:8082
CATEGORY_GRPC_PORT=:50053
CATEGORY_REST_PORT=:8083
BOOK_GRPC_PORT=:50054
BOOK_REST_PORT=:8084

# JWT Secrets
JWT_ACCESS_SECRET=your_very_secure_access_secret
JWT_REFRESH_SECRET=your_very_secure_refresh_secret

# Server Key
SERVER_KEY=your_secure_server_key

# Service Addresses (for inter-service communication)
AUTH_SERVICE_ADDRESS=auth:50051
AUTHOR_SERVICE_ADDRESS=author:50052
CATEGORY_SERVICE_ADDRESS=category:50053

# Database Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=5m

# JWT Token Expiration Times
JWT_ACCESS_EXPIRATION_TIME=15m
JWT_REFRESH_EXPIRATION_TIME=7d

# Optional: Logging
LOG_LEVEL=info

# Optional: API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m

